<template name="star">
<view class='star-container'>
  <view class='star'>
    <block wx:for="{{stars}}" wx:key="idx">
      <image wx:if="{{item}}" src='/image/icon/star.png'></image>
      <image wx:else src='/image/icon/none-star.png'></image>
    </block>        
  </view>
  <text>{{average}}</text>
</view>
</template>