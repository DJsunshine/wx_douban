.item-container{
  display: flex;
  flex-direction: column;
  border: 1px solid gray;
  border-left: none;
  border-right: none;
  margin: 20rpx 0 40rpx 0;
  padding-bottom: 5px;
}
.item-head{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}
.item-head image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
  margin-left: 10rpx;
}
.item-head text{
  font-size: 26rpx;
}
.item-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
}
.item-img{
  width: 100%;
  height: 340rpx;
  margin-bottom: 15px;
}
.item-content{
  color: #666;
  font-size: 28rpx;
  margin: 0 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.item-footer{
  display: flex;
  margin-left: 10px;
  flex-direction: row;
  align-items: center;
}
.item-footer image{
  width: 16px;
  height: 16px;
  margin-right: 10rpx;
}
.item-footer text{
  margin-right: 30rpx;
}